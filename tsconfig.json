{
    "compilerOptions": {
        "types": [
            "jest",
            "node",
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        "src/types"
    ]
}